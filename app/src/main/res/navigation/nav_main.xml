<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/categoryFragment">

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.movilbox.ui.view.product.ProductFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_product" >
        <action
            android:id="@+id/action_categoryFragment_to_detailProductFragment"
            app:destination="@id/detailProductFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailProductFragment"
        android:name="com.example.movilbox.ui.view.detail.DetailProductFragment"
        android:label="DetailProductFragment"
        tools:layout="@layout/fragment_detail_product"/>

</navigation>